# =============================================
# DATABASE
# =============================================
DB_HOST=postgres
DB_PORT=5432
DB_USER=cava_user
DB_PASSWORD=cava_password_dev
DB_NAME=cava_db
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# =============================================
# STORAGE
# =============================================
STORAGE_TYPE=minio
STORAGE_ENDPOINT=http://minio:9000
STORAGE_ACCESS_KEY=minio_access_key
STORAGE_SECRET_KEY=minio_secret_key
STORAGE_BUCKET_NAME=cava-media
STORAGE_REGION=us-east-1
STORAGE_USE_SSL=false
STORAGE_PUBLIC_URL=http://localhost:9000/cava-media

# =============================================
# AUTH & SECURITY
# =============================================
# IMPORTANTE: Gerar com: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_ACCESS_TOKEN_DURATION=15m
JWT_REFRESH_TOKEN_DURATION=168h

# IMPORTANTE: Gerar com: openssl rand -base64 32
PASSWORD_PEPPER=your-password-pepper-never-change-after-production
CSRF_SECRET=your-csrf-secret-key-change-this
BCRYPT_COST=12

# Cookies
COOKIE_SECURE=false
COOKIE_DOMAIN=localhost

# =============================================
# APPLICATION
# =============================================
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=3001

# URLs
FRONTEND_URL=http://localhost:3000
PUBLIC_LINK_BASE_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting (requests por minuto)
RATE_LIMIT_AUTH_RPM=5
RATE_LIMIT_PUBLIC_RPM=30
RATE_LIMIT_AUTHENTICATED_RPM=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=text

# Migrations
MIGRATIONS_PATH=file://migrations
AUTO_MIGRATE=true

# =============================================
# EMAIL (OPCIONAL)
# =============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@cava.com.br
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@cava.com.br