# =============================================
# DATABASE
# =============================================
DB_HOST=postgres
DB_PORT=5432
DB_USER=cava_user
DB_PASSWORD=cava_password_dev
DB_NAME=cava_db
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# =============================================
# STORAGE
# =============================================
STORAGE_TYPE=minio
STORAGE_ENDPOINT=http://minio:9000
STORAGE_ACCESS_KEY=minio_access_key
STORAGE_SECRET_KEY=minio_secret_key
STORAGE_BUCKET_NAME=cava-media
STORAGE_REGION=us-east-1
STORAGE_USE_SSL=false
STORAGE_PUBLIC_URL=http://localhost:9000/cava-media

# =============================================
# AUTH & SECURITY
# =============================================
# IMPORTANTE: Gerar com: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_ACCESS_TOKEN_DURATION=15m
JWT_REFRESH_TOKEN_DURATION=168h

# IMPORTANTE: Gerar com: openssl rand -base64 32
PASSWORD_PEPPER=your-password-pepper-never-change-after-production
CSRF_SECRET=your-csrf-secret-key-change-this
BCRYPT_COST=12

# Cookies
COOKIE_SECURE=false
COOKIE_DOMAIN=localhost

# =============================================
# APPLICATION
# =============================================
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=3001

# URLs
FRONTEND_URL=http://localhost:3000
PUBLIC_LINK_BASE_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting (requests por minuto)
RATE_LIMIT_AUTH_RPM=5
RATE_LIMIT_PUBLIC_RPM=30
RATE_LIMIT_AUTHENTICATED_RPM=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=text

# Migrations
MIGRATIONS_PATH=file://migrations
AUTO_MIGRATE=true

# =============================================
# EMAIL - AMAZON SES
# =============================================
# Usar SES para envio de emails (true = SES, false = Console/Mock)
# Em desenvolvimento local com USE_SES=false, emails são exibidos no console
# Em produção, sempre USE_SES=true
USE_SES=false

# Região AWS onde o SES está configurado
# Regiões populares: us-east-1, eu-west-1, sa-east-1 (São Paulo)
SES_REGION=us-east-1

# Email verificado no SES - OBRIGATÓRIO se USE_SES=true
# Este email DEVE estar verificado como identidade no AWS SES antes de enviar
SES_SENDER_EMAIL=noreply@seudominio.com.br

# Nome que aparece como remetente
SES_SENDER_NAME=CAVA

# =============================================
# AWS CREDENTIALS (APENAS PARA DESENVOLVIMENTO LOCAL)
# =============================================
# Em produção (Fargate/EC2), use IAM Roles - NÃO configure estas variáveis!
# Localmente, você pode usar:
#   1. Arquivo ~/.aws/credentials (RECOMENDADO)
#   2. Variáveis de ambiente (descomente abaixo)
#
# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key
# AWS_REGION=us-east-1